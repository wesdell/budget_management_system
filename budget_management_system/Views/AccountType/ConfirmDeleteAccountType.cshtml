@model AccountTypeModel

@{
	ViewData["Title"] = "Delete account type";
}

<h3 class="mb-3">Are you sure to delete @Model.Name account type?</h3>

<form asp-controller="AccountType" asp-action="DeleteAccountType">
	<input type="hidden" asp-for="Id" />
	<button type="submit" class="btn btn-danger">Delete</button>
	<a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>